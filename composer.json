{
    "name": "imiphp/project-udp",
    "type": "project",
    "description": "imi 框架的 UDP Server 项目。https://imiphp.com",
	"require": {
        "php": ">=7.4",
        "imiphp/imi": "~2.1.0",
        "imiphp/imi-workerman": "~2.1.0"
	},
    "require-dev": {
        "swoole/ide-helper": "^4.8",
        "friendsofphp/php-cs-fixer": "~3.4.0",
        "phpstan/phpstan": "~1.8.0",
        "phpunit/phpunit": "~9.5.0"
    },
    "autoload": {
        "psr-4" : {
			"ImiApp\\" : "./"
        },
        "files": [
            "init.php"
        ]
	},
    "autoload-dev": {
        "psr-4": {
            "ImiApp\\Test\\": "./tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "@php ./vendor/bin/phpunit -c ./phpunit.xml"
    }
}